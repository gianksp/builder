{
  "name": "dappify-builder",
  "version": "0.1.26",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@babel/preset-env": "^7.18.10",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/user-event": "^13.5.0",
    "@web3auth/web3auth": "^1.0.0",
    "bootstrap": "^5.2.1",
    "dappify-smart-contract-ui-module": "^1.1.0",
    "dappify-tailwind-module": "^1.0.1",
    "dappify-wallet-module": "^1.1.0",
    "grapesjs-plugin-forms": "^2.0.5",
    "grapesjs-tooltip": "^0.1.5",
    "material-icons": "^1.11.11",
    "postcss-scss": "^4.0.4",
    "react": "^18.2.0",
    "react-dappify": "^1.0.32",
    "react-dom": "^18.2.0",
    "react-scripts": "^4.0.3",
    "sass": "^1.54.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "export HTTPS=true&&SSL_CRT_FILE=cert.pem&&SSL_KEY_FILE=key.pem env-cmd -f .env react-scripts start",
    "build2": "env-cmd -f .env react-scripts build",
    "build": "rm -rf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "test": "jest --transformIgnorePatterns \"node_modules/(?!dappify-builder)/\" --env=jsdom --collectCoverage=true",
    "coverage": "jest --transformIgnorePatterns \"node_modules/(?!dappify-builder)/\" --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "publish:npm": "rm -rf dist && mkdir dist &&  babel src/lib -d dist --copy-files",
    "lint": "eslint --fix --ext .js,.jsx .",
    "prepare": "husky install"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "verbose": true,
    "testEnvironmentOptions": {
      "url": "https://dappify.local/"
    },
    "automock": false,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/dappify-*",
      "<rootDir>/node_modules/core-js-pure",
      "<rootDir>/node_modules/react-moralis",
      "<rootDir>/node_modules/moralis",
      "<rootDir>/node_modules/walletlink"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "transformIgnorePatterns": [
      "!node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mock__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/src/__mocks__/styleMock.js",
      "^uuid$": "uuid"
    },
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "coverageReporters": [
      "json",
      "text",
      "html",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*/*.d.ts",
      "!src/**/*/Loadable.{js,jsx,ts,tsx}",
      "!src/**/*/types.ts",
      "!src/**/store.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!<rootDir>/node_modules/",
      "!**/templates/**",
      "!**/template/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/plugin-proposal-numeric-separator": "^7.18.6",
    "@babel/plugin-transform-modules-amd": "^7.18.6",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "autoprefixer": "^9.8.8",
    "babel-eslint": "^10.0.3",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^10.0.1",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "enzyme": "^3.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "grapesjs": "^0.19.5",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": ">=10",
    "microbundle-crl": "^0.13.10",
    "msw": "^0.35.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "requirejs": "^2.3.6",
    "ts-jest": "^29.0.3"
  }
}
